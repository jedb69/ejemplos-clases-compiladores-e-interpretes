package modelo;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Point;

public class Circulo extends Figura {

	private int radio;
	private int tipo = 0;
	
	public void setRadio(int ancho){
		this.radio=ancho;
	}
	
	public void setTipo(int Tipo)
	{
		this.tipo = Tipo; 
	}
	public int getRadio(){
		return radio;
	}
	
	public Circulo(Point posicion, int radio){
		this.posicion=posicion;
		this.radio=radio;
		this.seleccionada=false;  //Deberia estar en el constructor de figura pero por simplicidad
	}
	
	@Override
	public boolean dentroFigura(Point p) {
		
		if ( radio >= Math.sqrt( Math.pow( p.x - posicion.x, 2 ) + Math.pow(p.y - posicion.y, 2 )))		
				return true;
		else
				return false;
	}

	@Override
	public void dibujar(Graphics g) {
		g.setColor(Color.BLACK);
		g.drawOval(this.getX(), this.getY(), this.getRadio(), this.getRadio());
		if(tipo == 1)
		{
			g.drawOval(this.getX(), this.getY(), this.getRadio()-2, this.getRadio()+2);
		}
		if(this.getSeleccionada()){
			g.setColor(Color.RED);
			g.drawOval(this.getX(), this.getY(), this.getRadio(), this.getRadio());
		}
	}

}
